// components/site-header.tsx
"use client"

import Link from "next/link"
import { Triangle, Heart, Search } from 'lucide-react'
import { Input } from "@/components/ui/input"
import { Button } from "@/components/ui/button"
import { cn } from "@/lib/utils"
import { useState } from "react"
import { ThemeToggle } from "@/components/theme-toggle"
import { CartDrawer } from "@/components/cart/cart-drawer"
import { AccountMenu } from "@/components/account/account-menu"

export function SiteHeader({ className }: { className?: string }) {
  const [q, setQ] = useState("")
  return (
    <header className={cn("sticky top-0 z-40 w-full border-b bg-white/80 backdrop-blur dark:bg-background/80", className)}>
      <div className="mx-auto flex h-14 items-center justify-between gap-4 px-4 sm:px-6 lg:max-w-7xl lg:px-8">
        <Link href="/" className="inline-flex items-center gap-2 font-semibold">
          <Triangle className="h-5 w-5" />
          <span>TechDukaan</span>
        </Link>

        <nav className="hidden items-center gap-6 text-sm md:flex">
          <Link href="/shop" className="text-neutral-700 hover:text-black dark:text-neutral-300 dark:hover:text-white">Business</Link>
          <Link href="/shop" className="text-neutral-700 hover:text-black dark:text-neutral-300 dark:hover:text-white">Gaming</Link>
          <Link href="/shop" className="text-neutral-700 hover:text-black dark:text-neutral-300 dark:hover:text-white">Student</Link>
          <Link href="/shop" className="text-neutral-700 hover:text-black dark:text-neutral-300 dark:hover:text-white">Ultrabooks</Link>
          <Link href="/shop" className="text-neutral-700 hover:text-black dark:text-neutral-300 dark:hover:text-white">Accessories</Link>
        </nav>

        <div className="hidden items-center gap-2 md:flex">
          <div className="relative">
            <Input value={q} onChange={(e) => setQ(e.target.value)} placeholder="Search" className="w-64 pl-9" />
            <Search className="pointer-events-none absolute left-2.5 top-1/2 h-4 w-4 -translate-y-1/2 text-neutral-400" />
          </div>
          <ThemeToggle />
          <Button asChild variant="ghost" size="icon" className="rounded-full">
            <Link href="/shop">
              <Heart className="h-5 w-5" />
            </Link>
          </Button>
          <CartDrawer />
          <AccountMenu />
        </div>

        <div className="flex items-center gap-1 md:hidden">
          <Button asChild variant="ghost" size="icon" className="rounded-full">
            <Link href="/shop">
              <Search className="h-5 w-5" />
            </Link>
          </Button>
          <ThemeToggle />
        </div>
      </div>
    </header>
  )
}

