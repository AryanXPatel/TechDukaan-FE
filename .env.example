# TechDukaan Frontend Environment Configuration
# Copy this file to .env.local and update with your actual values
# Repository: https://github.com/AryanXPatel/TechDukaan-FE

# Supabase Configuration (Required for Authentication)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# MeiliSearch Configuration (Required for Product Search)
NEXT_PUBLIC_MEILISEARCH_HOST=http://localhost:7700
NEXT_PUBLIC_MEILISEARCH_API_KEY=your_meilisearch_api_key

# Alternative MeiliSearch Config (used in some components)
NEXT_PUBLIC_MEILI_URL=http://localhost:7700
NEXT_PUBLIC_MEILI_API_KEY=your_meilisearch_api_key

# Medusa Backend Configuration (Required for Product Data)
NEXT_PUBLIC_MEDUSA_BACKEND_URL=http://localhost:9000
NEXT_PUBLIC_PUBLISHABLE_API_KEY=your_medusa_publishable_key

# Payment Gateway Configuration (Optional)
NEXT_PUBLIC_RAZORPAY_KEY=your_razorpay_key

# WhatsApp Business Configuration (Optional)
NEXT_PUBLIC_WHATSAPP_NUMBER=+1234567890
